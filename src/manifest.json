{
    "name":"SimplyClip",
    "description":"A clipboard manager for chromium based browsers",
    "manifest_version":2,
    "version":"1.1",
    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "js": ["oncopy.js"]
      } ],
    "background" : {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons":{
      "32":"./images/paper-clip_32.png"
    },
    "commands": {
      "paste_first": {
        "suggested_key": {
          "default": "Ctrl+Shift+1",
          "mac": "Command+Shift+1"
        },
        "description": "Pastes the element on top of list"
      },
      "paste_second": {
        "suggested_key": {
          "default": "Ctrl+Shift+2",
          "mac": "Command+Shift+2"
        },
        "description": "Pastes the 2nd element from the top"
      }
    },
    "options_page":"./test/test.html",
    "browser_action":{
        "default_icon":"./images/paper-clip_32.png",
        "default_title":"SimplyClip",
        "default_popup":"popup.html"
    },
    "permissions":["storage","tabs", "contextMenus", "clipboardWrite", "clipboardRead"]
}
